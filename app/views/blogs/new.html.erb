<div class="create_blog">
  <%= form_for([@user, @user.blogs.build]) do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :text %><br>
        <%= f.text_area :content %>
      </p>

      <p>
        <%= f.submit 'Submit' %>
      </p>

  <% end %>
  <%= link_to 'Back', @user %>
</div>