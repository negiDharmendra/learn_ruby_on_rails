<div class="signup_form">
  <h1 class='form_title'>Signup for our site</h1>
  <%= form_for(:reset_password,url: reset_passwords_path) do |f| %>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, :class => 'user_details',:required => true %>
      </div>
      <div class="field">
        <button class='form_button'> Sign Up</button>
      </div>
  <% end %>
</div>
