<p id="notice"><%= notice %></p>
<section class='blogs_section'>
  <div class="user_blog">
    <% @blog.versions.each do |version| %>
        <div class="blog">
          <div class="title"><strong style="color:#663F3F;">Title: </strong><%= version.title.to_s.capitalize %>
            <strong style="color:#663F3F;"> Created at: <%= version.created_at.localtime.to_s.slice(0, 19) %> </strong>
          </div>
          <div class="blog_content"><strong style="color:#663F3F;">Content:</strong><%= version.content %></div>
          <div class="blog_action">
            <div class="a_action"><%= link_to 'more', user_blog_version_path(@user,@blog, version), method: :get %></div>
            <div class="a_action"><%= link_to 'remove', user_blog_path(@user,@blog, version),
                                              method: :delete,
                                              data: {confirm: 'Are you sure?'} %></div>
          </div>
        </div>
    <% end %>
    <h3>  <%= link_to 'Go Back', @user %> </h3>
  </div>
</section>