<% if (!flash[:success_message].nil? || !flash[:activation_message].nil?) %>
    <div class="message">
      <%= flash[:success_message] %>
      <%= flash[:activation_message] %>
    </div>
<% end %>
<% if !flash[:danger].nil? %>
    <div class="warning">
      <%= flash[:danger] %>
    </div>
<% end %>
<section class='blogs_section'>
  <div class="user_blog">
    <% @blogs.each do |blog| %>
        <div class="blog">
          <div class="title">
            <strong style="font-size:20px"><%= blog.title.to_s.capitalize %></strong>
            <strong style="color:#663F3F;float: right; padding-top: 2%"> Created
              at: <%= blog.created_at.localtime.to_s.slice(0, 19) %> </strong>
          </div>
          <div class="blog_content"><%= blog.content %></div>
          <div class="blog_action">
            <div class="a_action"><%= link_to '<span data-toggle="tooltip" data-placement="bottom" title="Read more" style="font-size:20px">...</span>'.html_safe, blog_path(blog), method: :get %></div>
          </div>
        </div>
    <% end %>
  </div>
</section>
